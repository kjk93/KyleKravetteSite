<div class="row">
	<%= form_for(Picture.new) do |f| %>
		<center>
			<%= f.file_field :pictures, multiple: true, id: "file_input" %>
			<div><%= hidden_field_tag :folder, @folder.id %></div>
			<%= f.submit "Add Pictures", data: {toggle: "modal", target: "#progress-modal"}, disabled: true, title: "Add a picture", class: "btn btn-primary btn-large", id: "submit-btn" %>
		</center>
	<% end %>
</div>

<script>
	$("#file_input").change(function(){
		if($(this).val() == ""){
			$("#submit-btn").attr("disabled", "disabled");
		}
		else{
			$("#submit-btn").removeAttr("disabled");
		}
	});
</script>