<%= provide(:title, "Portfolio") %>

<div class="container-fluid">
	<h1>Portfolio</h1>

	<div class="row">
		<h2>Your Slideshow Pictures</h2>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<ol class="slideslots">
			<div class="col-xs-1"></div>
			<%= render @slideslots %>
		</ol>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<h2>Folders</h2>
	</div>

	<div class="row">
		<%= form_for(@folder, html: {class: "form-horizontal"}) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="form-group">
				<%= f.label :title, class: "col-xs-1 col-xs-offset-4 control-label" %>
				<div class="col-xs-2">
					<%= f.text_field :title, class: "form-control" %>
				</div>

				<div class="col-xs-3">
					<%= f.submit "Create Folder", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>

	<% if @user.folders.any? %>
		<div class="row">
			<ol class="folders">
				<%= render @folders %>
			</ol>
		</div>
	<% end %>
</div>